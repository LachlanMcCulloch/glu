{
  "name": "glu-cli",
  "version": "0.1.0-alpha.2",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "glu": "dist/index.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.build.json && chmod +x ./dist/index.js",
    "start": "node dist/index.js",
    "test": "vitest",
    "test:unit": "vitest --exclude '**/*.int.test.ts' --exclude 'tests/**'",
    "test:int": "vitest src/**/*.int.test.ts",
    "test:e2e": "vitest tests/e2e/**",
    "test:all": "vitest run",
    "test:watch": "vitest --watch",
    "test:watch:unit": "vitest --watch --exclude '**/*.int.test.ts'",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "preglu": "npm run --silent build",
    "glu": "node ./dist/index.js",
    "glu-debug": "DEBUG=simple-git node ./dist/index.js"
  },
  "keywords": [
    "git",
    "cli",
    "patch-stack",
    "stacked-commits",
    "stacked-diffs",
    "branch-management",
    "commit-management",
    "git-workflow",
    "pull-request",
    "github",
    "code-review",
    "developer-tools",
    "version-control",
    "automation"
  ],
  "author": "Lachlan McCulloch <lachlan@squarechainlabs.com>",
  "license": "GPL-3.0-or-later",
  "description": "Git stacked branch management with GitHub integration",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/LachlanMcCulloch/glu.git"
  },
  "homepage": "https://github.com/LachlanMcCulloch/glu#readme",
  "bugs": {
    "url": "https://github.com/LachlanMcCulloch/glu/issues"
  },
  "dependencies": {
    "@octokit/rest": "^22.0.0",
    "@types/node": "^24.5.2",
    "chalk": "^5.6.2",
    "commander": "^14.0.1",
    "cosmiconfig": "^9.0.0",
    "ora": "^9.0.0",
    "simple-git": "^3.28.0",
    "typescript": "^5.9.2"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "execa": "^9.6.0",
    "fs-extra": "^11.3.2",
    "prettier": "^3.6.2",
    "vitest": "^3.2.4"
  }
}
