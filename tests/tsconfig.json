{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "rootDir": "..", // Overriden from base to point to project root
    "baseUrl": ".",
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "outDir": "../dist/tests",
    "types": ["node", "vitest/globals"],
    "paths": {
      "@/*": ["../src/*"],
      "@/commands/*": ["../src/commands/*"],
      "@tests/*": ["./*"]
    }
  },
  "include": ["**/*.ts", "../src/**/*.ts"],
  "exclude": ["node_modules", "../dist"]
}
